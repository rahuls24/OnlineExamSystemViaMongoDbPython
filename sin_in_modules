from pymongo import MongoClient 
  
try: 
    conn = MongoClient() 
    print("Connected successfully!!!") 
except:   
    print("Could not connect to MongoDB") 
  
# database 
db = conn.database
  
# Created or Switched to collection names:USER
collection = db.user
  
Student = { 
        "Name":"Aakash Barai", 
        "RegdNo":"170310430", 
        "Branch":"CSE",
         "Password":"AAKA170310430"
        } 
Instructor = { 
        "ID":"CS515356", 
        "Password":"Mongopy121"
        } 
  
# Insert Data 
rec_id1 = collection.insert_one(Student) 
rec_id2 = collection.insert_one(Instructor) 
  
# Printing the data inserted 
cursor = collection.find() 
for record in cursor: 
    print(record) 
UserId=input("Input Your ID")
Pass=input("Enter Your Password")
a=[]
for data in cursor:
    a.append(data)
for i in range(len(a)):
    b={}
    b=a[i]
    if 'RegdNo' in b:
        if UserId==b['RegdNo']:
            if 'Password' in b:
                if Pass==b['Password']:
                    if Pass.isdigit():
                        print("Login Sucessful")
                        print("Login Sucessful")
                        print("Welcome Student")
                    else:
                        print("Login Sucessful")
                        print("\n")
                        print("Welcome Instructor")
                else:
                    print("Login Unscueesful! Password is not match with data")
        else:
            print("Login Unscueesful! User Id is not match with data ")
                    
    
    
    
                    
                    
                        
                        
                    
                    
    
